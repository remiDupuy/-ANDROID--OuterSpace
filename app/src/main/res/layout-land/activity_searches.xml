<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="com.dupuy.remi.outerspacemanager.fragments.FragmentListingSearches"
        android:id="@+id/fragmentListSearches" />
    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:name="com.dupuy.remi.outerspacemanager.fragments.FragmentDetailSearches"
        android:id="@+id/fragmentDetailSearches"
        android:layout_gravity="center_vertical" />
</LinearLayout>
